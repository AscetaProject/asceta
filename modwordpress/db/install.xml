<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="mod/modwordpress/db" VERSION="20101203" COMMENT="XMLDB file for Moodle mod/modwordpress"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="modwordpress" COMMENT="Wordpresss for moodle" NEXT="modwordpress_servers">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true" NEXT="course"/>
        <FIELD NAME="course" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false" COMMENT="Course modwordpress activity belongs to" PREVIOUS="id" NEXT="name"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="name field for moodle instances" PREVIOUS="course" NEXT="intro"/>
        <FIELD NAME="intro" TYPE="text" LENGTH="medium" NOTNULL="false" SEQUENCE="false" COMMENT="General introduction of the modwordpress activity" PREVIOUS="name" NEXT="api"/>
        <FIELD NAME="api" TYPE="text" LENGTH="medium" NOTNULL="false" SEQUENCE="false" COMMENT="Wordpress API URL" PREVIOUS="intro" NEXT="introformat"/>
        <FIELD NAME="introformat" TYPE="int" LENGTH="4" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" COMMENT="Format of the intro field (MOODLE, HTML, MARKDOWN...)" PREVIOUS="api" NEXT="timecreated"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false" PREVIOUS="introformat" NEXT="timemodified"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="timecreated" NEXT="server_id"/>
        <FIELD NAME="server_id" TYPE="int" LENGTH="10" NOTNULL="false" UNSIGNED="true" SEQUENCE="false" PREVIOUS="timemodified" NEXT="permission_create_post"/>
        <FIELD NAME="permission_create_post" TYPE="int" LENGTH="10" NOTNULL="false" UNSIGNED="true" SEQUENCE="false" PREVIOUS="server_id" NEXT="permission_edit_post"/>
        <FIELD NAME="permission_edit_post" TYPE="int" LENGTH="10" NOTNULL="false" UNSIGNED="true" SEQUENCE="false" PREVIOUS="permission_create_post" NEXT="permission_delete_post"/>
        <FIELD NAME="permission_delete_post" TYPE="int" LENGTH="10" NOTNULL="false" UNSIGNED="true" SEQUENCE="false" PREVIOUS="permission_edit_post" NEXT="permission_create_comment"/>
        <FIELD NAME="permission_create_comment" TYPE="int" LENGTH="10" NOTNULL="false" UNSIGNED="true" SEQUENCE="false" PREVIOUS="permission_delete_post" NEXT="permission_edit_comment"/>
        <FIELD NAME="permission_edit_comment" TYPE="int" LENGTH="10" NOTNULL="false" UNSIGNED="true" SEQUENCE="false" PREVIOUS="permission_create_comment" NEXT="permission_delete_comment"/>
        <FIELD NAME="permission_delete_comment" TYPE="int" LENGTH="10" NOTNULL="false" UNSIGNED="true" SEQUENCE="false" PREVIOUS="permission_edit_comment" NEXT="permission_create_page"/>
        <FIELD NAME="permission_create_page" TYPE="int" LENGTH="10" NOTNULL="false" UNSIGNED="true" SEQUENCE="false" PREVIOUS="permission_delete_comment" NEXT="permission_edit_page"/>
        <FIELD NAME="permission_edit_page" TYPE="int" LENGTH="10" NOTNULL="false" UNSIGNED="true" SEQUENCE="false" PREVIOUS="permission_create_page" NEXT="permission_delete_page"/>
        <FIELD NAME="permission_delete_page" TYPE="int" LENGTH="10" NOTNULL="false" UNSIGNED="true" SEQUENCE="false" PREVIOUS="permission_edit_page"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id" NEXT="url"/>
        <KEY NAME="url" TYPE="foreign" FIELDS="server_id" REFTABLE="modwordpress_servers" REFFIELDS="id" PREVIOUS="primary"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="course" UNIQUE="false" FIELDS="course"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="modwordpress_servers" COMMENT="REST API servers for modwordpress" PREVIOUS="modwordpress" NEXT="modwordpress_users">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true" NEXT="name"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="REST API's Server Name" PREVIOUS="id" NEXT="url"/>
        <FIELD NAME="url" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="REST API's URL" PREVIOUS="name" NEXT="consumer_key"/>
        <FIELD NAME="consumer_key" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false" COMMENT="OAuth Consumer Key" PREVIOUS="url" NEXT="consumer_secret"/>
        <FIELD NAME="consumer_secret" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false" COMMENT="OAuth Consumer Secret" PREVIOUS="consumer_key" NEXT="request_token"/>
        <FIELD NAME="request_token" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false" COMMENT="OAuth Request Token" PREVIOUS="consumer_secret" NEXT="request_secret"/>
        <FIELD NAME="request_secret" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false" COMMENT="OAuth Request Secret" PREVIOUS="request_token" NEXT="access_token"/>
        <FIELD NAME="access_token" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false" COMMENT="OAuth Access Token" PREVIOUS="request_secret" NEXT="access_secret"/>
        <FIELD NAME="access_secret" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false" COMMENT="OAuth Access Secret" PREVIOUS="access_token" NEXT="oauth"/>
        <FIELD NAME="oauth" TYPE="int" LENGTH="1" NOTNULL="true" UNSIGNED="true" DEFAULT="1" SEQUENCE="false" COMMENT="Requires OAuth authentication" PREVIOUS="access_secret"/>      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="url" UNIQUE="false" FIELDS="url"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="modwordpress_users" COMMENT="Users relation between moodle and wordpress" PREVIOUS="modwordpress_servers">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true" NEXT="moodle_id"/>
        <FIELD NAME="moodle_id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false" PREVIOUS="id" NEXT="wordpress_id"/>
        <FIELD NAME="wordpress_id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false" PREVIOUS="moodle_id" NEXT="server_id"/>
        <FIELD NAME="server_id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false" PREVIOUS="wordpress_id"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id" NEXT="server"/>
        <KEY NAME="server" TYPE="foreign" FIELDS="server_id" REFTABLE="modwordpress_servers" REFFIELDS="id" PREVIOUS="primary" NEXT="user"/>
        <KEY NAME="user" TYPE="foreign" FIELDS="moodle_id" REFTABLE="user" REFFIELDS="id" PREVIOUS="server"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>
